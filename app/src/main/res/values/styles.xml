<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Unit.Value" parent="TextAppearance.AppCompat">
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/unit_value</item>
    </style>

    <style name="Unit.Label" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/unit_label</item>
    </style>
</resources>
